                </Grid>
            </TabItem>
            -->
        </TabControl>

        <!--<oxy:Plot
                    Title="HeartRate"
                    Margin="10" >
                    <oxy:LineSeries
                        Color="DarkBlue"
                        ItemsSource="{Binding displayThis}"
                        DataFieldX="yAxis"
                        DataFieldY="xAxis" />
                </oxy:Plot>-->

        <Button
            Command="{Binding StuffToDelete}"
            Content="Delete"
            ToolTipService.ShowOnDisabled="True"
            Height="23"
            HorizontalAlignment="Left"
            Margin="360,0,0,10"
            Name="button1"
            VerticalAlignment="Bottom"
            Width="75">
            <Button.ToolTip>
                <ToolTip Style="{StaticResource MyTooltip}">
                    <StackPanel>
                        <TextBlock FontWeight="Bold">Delete</TextBlock>
                        <TextBlock>Select Which Rows To Delete</TextBlock>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
            <Button.Effect>
                <DropShadowEffect ShadowDepth="4" />
            </Button.Effect>
        </Button>

        <CheckBox
            IsChecked="{Binding LapsByDate}"
            Command="{Binding TestSelect}"
            Content="List Laps by Date"
            Height="16"
            HorizontalAlignment="Left"
            Margin="500,0,0,10"
            Name="checkBox1"
            FontWeight="Bold"
            VerticalAlignment="Bottom" >
            <CheckBox.ToolTip>
                <ToolTip Style="{StaticResource MyTooltip}">
                    <StackPanel>
                        <TextBlock FontWeight="Bold">Laps By Date</TextBlock>
                        <TextBlock>Check to see only the laps for this date</TextBlock>
                    </StackPanel>
                </ToolTip>
            </CheckBox.ToolTip>
        </CheckBox>
        
        <ToggleButton
            IsChecked="{Binding Source={x:Static fm:DataService.Instance}, Path=DistanceTimeFlag}"
            HorizontalContentAlignment="Right"
            FontWeight="Bold"
            Content="Show Distance"
            Background="IndianRed"
            BorderBrush="{x:Null}"
            Style="{DynamicResource SlidingToggleButton}"
            Height="22"
            Width="172"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="641,0,0,10">
        </ToggleButton>

        <!--
        <Button
            Visibility="Hidden"
            Content="Test"
            Command="{Binding ResetPlot}"
            Height="23"
            HorizontalAlignment="Right"
            Margin="0,0,55,10"
            Name="button2"
            VerticalAlignment="Bottom"
            Width="75" />
        -->

        <TextBlock
            TextAlignment="Right"
            Height="23"
            Width="96"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            Margin="160,0,0,10"
            Name="textBlock2"
            Text="{Binding recordCount}"
            VerticalAlignment="Bottom" />

        <TextBlock
            Height="23"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            Margin="260,0,0,10"
            Name="textBlock3"
            Text="{Binding RecordDisplay}"
            VerticalAlignment="Bottom" />

        <TextBlock
            Height="23"
            HorizontalAlignment="Left"
            Margin="10,0,0,10"
            Name="textBlock1"
            FontWeight="Bold"
            FontSize="16"
            Text="{Binding Name}"
            VerticalAlignment="Bottom"
            Width="96" />
        
    </Grid>
</UserControl>
